<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_ressource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageRessource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitreRessource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="100dp"
            android:text="@string/titre_ressource"
            android:textAlignment="center"
            android:textColor="@color/colorUvsq"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listeRessource"
            style="@style/Widget.AppCompat.Light.ListView.DropDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/liste_ressource"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical" />
    </LinearLayout>
</FrameLayout>