<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_vie_etudiante"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageVieEtudiante">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitreVieEtu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="70dp"
            android:text="@string/titre_vie_étudiante"
            android:textAlignment="center"
            android:textColor="@color/colorUvsq"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lesActivités"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingBottom="25dp"
            android:text="@string/h1_vie_etudiante"
            android:textColor="@color/colorUvsq"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerActivités"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/liste_activité"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

</FrameLayout>